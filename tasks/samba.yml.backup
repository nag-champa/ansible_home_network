---

- name: setup samba server
  hosts: new
  become: true
  gather_facts: false

  vars:
    ansible_user: root

  handlers:
    - name: restart_smbd
      service:
        name: smbd
        state: restarted

  pre_tasks:
  - name: update app cache.
    package: update_cache=yes
    changed_when: false

  tasks:
    - name: create samba system group
      group:
        name: smbgroup
        system: true

    - name: create samba system user
      user:
        name: smbuser
        create_home: false
        group: smbgroup
        comment: 'samba system user'
        expires: -1
        shell: "/bin/false"
        system: true

    - name: install smb package
      package:
        name: samba
        state: present

    - name: create share directory structure
      file:
        path: "{{ item }}"
        state: directory
        owner: smbuser
        group: smbgroup
        mode: 0770
      loop:
        - /share
        - /share/public

    - name: copy smb.conf to /etc/samba
      copy:
        src: ./files/smb.conf
        dest: /etc/samba/smb.conf
        owner: root
        group: root
        mode: 0644
        backup: yes
      notify: restart_smbd

    - name: stop & disable nmbd service to hush smb broadcasts
      service:
        name: nmbd
        state: stopped
        enabled: false
     
    - name: ensure smbd service is started and enabled
      service:
        name: smbd
        state: started
        enabled: true
